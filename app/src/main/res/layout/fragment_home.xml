<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="398dp"
        android:layout_height="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="0sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/line1"
        android:layout_width="370dp"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="8dp"
        android:background="@color/black"
        app:layout_constraintTop_toTopOf="parent"/>

    />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Kecelakaan Tragis Terjadi di Jalan Raya"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/line1"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="366dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="15sp"
        android:text="Kemarin malam, sebuah kecelakaan tragis terjadi di jalan raya X. Kecelakaan tersebut melibatkan dua mobil yang saling bertabrakan dengan keras. Akibat kecelakaan, salah satu pengemudi mengalami luka serius dan harus dibawa ke rumah sakit."
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="15sp"
        android:text="Petugas dari dinas kesehatan dan polisi segera menuju lokasi kejadian setelah menerima laporan. Mereka melakukan penanganan dan pemeriksaan terhadap korban dan juga melakukan pengumpulan bukti untuk menyelidiki penyebab kecelakaan."
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="15sp"
        android:text="Menurut saksi mata, kecelakaan terjadi karena pengemudi salah satu mobil tidak memperhatikan lampu merah dan langsung melaju. Polisi masih melakukan investigasi lebih lanjut dan berkoordinasi dengan pihak rumah sakit untuk mengetahui kondisi korban."
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="15sp"
        android:text="Kecelakaan tragis ini mengingatkan kita semua akan pentingnya menjaga keselamatan saat berkendara. Kita harus selalu memperhatikan lampu lalu lintas, menjaga jarak aman, dan tidak terpengaruh oleh tingkat kelelahan atau stres. Kecelakaan seperti ini bisa terjadi kapan saja dan menimbulkan dampak yang sangat buruk, sehingga kita harus lebih waspada dan memperhatikan keselamatan berkendara."
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        />

    <View
        android:id="@+id/line2"
        android:layout_width="370dp"
        android:layout_height="2dp"
        android:layout_marginTop="20dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        />

</androidx.constraintlayout.widget.ConstraintLayout>