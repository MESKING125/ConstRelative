<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">



    <TextView
        android:id="@+id/text_dashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="0sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/line1"
        android:layout_width="370dp"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="22dp"
        android:background="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Anak Muda Berbakat Berhasil Merealisasikan Impiannya"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/line1"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="366dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="15sp"
        android:text="Sarah, seorang siswi SMA berusia 17 tahun, memiliki minat dan bakat dalam bidang seni. Ia sering menghabiskan waktu luangnya untuk membuat berbagai karya seni, seperti lukisan, patung, dan masih banyak lagi. Keluarganya awalnya kurang memahami dan tidak memberikan dukungan untuk Sarah, tetapi ia tidak mudah patah semangat."
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="15sp"
        android:text="Sarah berjuang untuk mewujudkan impiannya dengan mengikuti berbagai kursus seni dan memperbanyak pengalaman dan wawasannya. Keberhasilannya dalam sebuah lomba seni nasional membuktikan bahwa minat dan bakatnya benar-benar luar biasa. Keberhasilan tersebut membuat keluarganya bangga dan membuktikan bahwa dengan tekad dan semangat yang kuat, kita bisa merealisasikan impian kita."
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="15sp"
        android:text="Kini, Sarah sedang mempersiapkan diri untuk mengikuti lomba seni internasional. Ia berharap bisa membawa nama baik Indonesia dan menjadi inspirasi bagi anak muda lain untuk mengejar impian mereka. Sarah membuktikan bahwa minat dan bakat yang dimiliki dapat menjadi jalan menuju keberhasilan jika kita berusaha dan tidak takut untuk mengejar impian kita."
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="15sp"
        android:text="Kecelakaan tragis ini mengingatkan kita semua akan pentingnya menjaga keselamatan saat berkendara. Kita harus selalu memperhatikan lampu lalu lintas, menjaga jarak aman, dan tidak terpengaruh oleh tingkat kelelahan atau stres. Kecelakaan seperti ini bisa terjadi kapan saja dan menimbulkan dampak yang sangat buruk, sehingga kita harus lebih waspada dan memperhatikan keselamatan berkendara."
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/line2"
        android:layout_width="370dp"
        android:layout_height="2dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="22dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>